@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
  
    <section id="joinGroupSection" class="row">
        <div class="col-6">
            <form id="joinGroupForm">
                <div  class="form-group ">
                    <label  class="d-block">UserName</label>
                    <input id="username" class="form-control"/>
                </div>
                <div class="form-group ">
                    <label class="d-block">Group</label>
                    <select id="group" class="form-select col-12">
                        <option value="1">P323</option>
                        <option value="2">DL314</option>
                        <option value="3">E542</option>
                    </select>
                </div>
                <div class="from-group" mt-4>
                    <button class="btn-primary btn-warning col-12 p-2 font-weight-bold" type="submit">Join</button>
                </div>
            </form>
        </div>
    </section>
    <section id="chatSection" class="row  mt-7 d-none">
        <div class="col-12 mt-3">
            <button id="leaveGroupBtn"  class="btn-primary btn-danger">Leave</button>
        </div>
        <div class="col-4">
            <form id="sendMessageForm">
                <div class="form-group">
                  <label>Message</label>
                  <textarea class="form-control" id="message"></textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-success" type="submit">Send</button>
                </div>
            </form>
        </div>
        <div class="col-8">
            <ul id="messages" class="list-group">
               @* <li class="list-grop-item">
                    <b>Aysun</b>
                    <p>Salam</p>
                </li>*@
            </ul>
        </div>
    </section>

</div>
@section Scripts{

<script src="~/js/signalr/dist/browser/signalr.js"></script>
<script src="~/js/chat.js"></script>

    
}